---
import type { CollectionEntry } from 'astro:content';

import { SITE_DESCRIPTION, SITE_TITLE } from '@/consts';
import PostList from '@/components/PostList.astro';

import BaseLayout from './BaseLayout.astro';

interface Props {
	/**
	 * Page title (will be appended with " | SITE_TITLE")
	 */
	pageTitle: string;
	/**
	 * Posts or translations to display
	 */
	posts: CollectionEntry<'blog'>[] | CollectionEntry<'translations'>[];
	/**
	 * All tags to display at the bottom
	 */
	allTags: string[];
	/**
	 * Base path for post links (e.g., '/blog' or '/translations')
	 */
	basePath?: string;
}

const { pageTitle, posts, allTags, basePath = '/blog' } = Astro.props;
---

<BaseLayout title={`${pageTitle} | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
	<PostList posts={posts} basePath={basePath} />
	{
		allTags && allTags.length > 0 && (
			<small>
				<div class="tags">
					{allTags.map((tag) => (
						<a rel="nofollow" href={`/tags/${encodeURIComponent(tag)}/`}>{`#${tag}`}</a>
					))}
				</div>
			</small>
		)
	}
</BaseLayout>
